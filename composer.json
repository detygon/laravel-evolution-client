{
    "name": "samuelterra22/evolution-laravel-client",
    "description": "Cliente Laravel para Evolution API",
    "keywords": [
        "laravel",
        "evolution",
        "api",
        "whatsapp"
    ],
    "homepage": "https://github.com/samuelterra22/evolution-laravel-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Samuel Terra",
            "email": "samuelterra22@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "guzzlehttp/guzzle": "^7.5",
        "illuminate/contracts": "^9.0|^10.0",
        "illuminate/support": "^9.0|^10.0",
        "ratchet/pawl": "^0.4.1",
        "react/event-loop": "^1.3",
        "react/socket": "^1.12"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13",
        "orchestra/testbench": "^7.0|^8.0",
        "phpunit/phpunit": "^9.5|^10.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "SamuelTerra22\\EvolutionLaravelClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SamuelTerra22\\EvolutionLaravelClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SamuelTerra22\\EvolutionLaravelClient\\EvolutionServiceProvider"
            ],
            "aliases": {
                "Evolution": "SamuelTerra22\\EvolutionLaravelClient\\Facades\\Evolution"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
